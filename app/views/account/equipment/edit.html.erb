<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="devise">
        <h2>Enter the new details of your new listing below:</h2>
        <%= simple_form_for(@equipment, url: account_equipment_path) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :address %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.submit class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
