<div class="wrapper-grey2 padded text-center">
  <h1>Your listings:</h1>
  <div class="container">
    <div class="row">
      <% current_user.equipment.each do |equipment| %>
      <div class="col-xs-12 col-sm-4">
        <% if equipment.photo? %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path equipment.photo.path %>);">
        <% else %>
          <div class="card" style="background-color:#C0C3C5, linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));">
        <% end %>
          <div class="card-category" id="equipment-title-small"><%= equipment.title %></div>
          <div class="card-description-small">
            <p><%= equipment.description %></p>
          </div>
          <%= cl_image_tag equipment.user.avatar.path, class: "card-user avatar" %>
          <%= link_to "", equipment_path(equipment), class: 'card-link'  %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>






