<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0) 0%, rgba(49, 112, 143, 0.3) 50%), url(<%= image_path 'banner.jpg' %>);">
  <div class="banner-content">
  <h2>Rent music equipment</h2>
    <div class="search-form">
      <%= form_tag(equipment_index_path, method: "get") do %>
        <%= text_field_tag(:title) %>
        <%= text_field_tag(:address) %>
        <%= datetime_local_field(:rental, :start_date) %>
        <%= datetime_local_field(:rental, :end_date) %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


