<% if @equipment.user == current_user %>
<%= link_to "Edit this listing", edit_account_equipment_path(@equipment), class: 'btn btn-warning'  %>
<% end %>
<% if @equipment.user == current_user %>
<%= link_to "Remove this listing", account_equipment_path(@equipment), method: 'delete', class: 'btn btn-danger'  %>
<% end %>

<div class="container padded">
  <div class="row">
    <div class="col-xs-12 col-sm-5">
      <img src="http://placehold.it/400x400" alt="", class="show-image">
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="card-info text-xs-center", id="eq-info">
        <div class="card-header">
          <h4 class="card-title">Equipment info:</h4>
        </div>
        <ul id="description">
          <li>Title: <%= @equipment.title %></li>
          <li>Description: <%= @equipment.description %></li>
          <li>Owner: <%= @equipment.user.first_name.capitalize + " " + @equipment.user.last_name.capitalize %></li>
        </ul>
      </div>
    </div>

    <div class="col-xs-12 col-sm-3">
      <div class="card-header text-center", id="rent-header">
        <form>
          <div class="form-group">
            <label for="start_date">Select date and time</label>
          </div>
          <hr>
        <div class="form-group">
          <input type="date" class="form-control" id="start_date" placeholder="Start Date">
        </div>
        <div class="form-group">
          <input type="time" class="form-control" id="start_time" placeholder="Start Date">
        </div>
        <div class="form-group">
          <input type="time" class="form-control" id="end" placeholder="End Time">
        </div>
        <% unless current_user %>
        <%= link_to "Select", new_user_session_path, class: "btn btn-danger"  %>
        <p>(login required)</p>
        <% else %>
        <%= link_to "Select", new_equipment_rental_path(@equipment), class: "btn btn-danger"  %>
          <% end %>
      </form>
    </div>
  </div>
</div>
</div>


